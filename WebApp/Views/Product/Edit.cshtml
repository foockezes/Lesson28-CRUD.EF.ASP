<form method="post" asp-action="Edit" asp-controller="Product">
    <div asp-validation-summary="All" />
    <input type="hidden" asp-for="Id" />
    <label>Type</label>
    <input class="form-control" name="Type" value="@Model.Type" />
    <span asp-validation-for="Type"></span>
    <br />
    <label>Cost</label>
    <input class="form-control" asp-for="Cost" />
    <span asp-validation-for="Cost"></span> <br />
    <input class="btn btn-success" type="submit" title="Save" value="Save" />
    <a class="btn" asp-controller="Product" asp-action="Index">Back</a>
</form>
